{
  "compilerOptions": {
    // ğŸ§  Compilation behavior
    "incremental": true,
    "target": "ES2021",
    "lib": ["ES2021"],

    // âš™ï¸ Decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // ğŸ“¦ Module system
    "module": "ESNext",
    "moduleResolution": "node",

    // ğŸ“ Path aliases for development
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ğŸ—‚ï¸ Directory management
    "rootDir": "src",
    "outDir": "dist",
    "preserveSymlinks": true,

    // âœ… Import support
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // ğŸ§ª Type safety
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,

    // ğŸ“ Declaration and debugging
    "declaration": true,
    "sourceMap": true,

    // ğŸ” File casing and skipping unnecessary checks
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // ğŸ“Œ Add these for standalone module outputs
    "declarationMap": true // Useful if youâ€™ll expose your modules via registry
  },

  // ğŸ” Ensure inclusion of all dynamic or runtime-compiled paths
  "include": [
    "src/**/*",
    "src/types.d.ts",
    "src/devops-scripts/migration/**/*",
    "sdk/acl.service.ts.backup"
  ],

  // âŒ Exclude unnecessary build-time directories
  "exclude": ["node_modules", "dist"],

  // ğŸ› ï¸ ts-node config (used in dev)
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
