{
  "compilerOptions": {
    // 🧠 Compilation behavior
    "incremental": true,
    "target": "ES2021",
    "lib": ["ES2021"],

    // ⚙️ Decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // 📦 Module system
    "module": "ESNext",
    "moduleResolution": "node",

    // 📁 Path aliases for development
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // 🗂️ Directory management
    "rootDir": "src",
    "outDir": "dist",
    "preserveSymlinks": true,

    // ✅ Import support
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // 🧪 Type safety
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,

    // 📝 Declaration and debugging
    "declaration": true,
    "sourceMap": true,

    // 🔍 File casing and skipping unnecessary checks
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // 📌 Add these for standalone module outputs
    "declarationMap": true // Useful if you’ll expose your modules via registry
  },

  // 🔍 Ensure inclusion of all dynamic or runtime-compiled paths
  "include": [
    "src/**/*",
    "src/types.d.ts",
    "src/devops-scripts/migration/**/*",
    "sdk/acl.service.ts.backup"
  ],

  // ❌ Exclude unnecessary build-time directories
  "exclude": ["node_modules", "dist"],

  // 🛠️ ts-node config (used in dev)
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
