{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "baseUrl": ".",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
